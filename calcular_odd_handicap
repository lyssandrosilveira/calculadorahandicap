def calcular_odd_handicap(probabilidade_casa, probabilidade_visitante, probabilidade_empate):
    odd_linha_05 = 1 / probabilidade_casa
    odd_linha_00 = 1 / (probabilidade_casa + probabilidade_visitante)
    odd_linha_025 = (odd_linha_00 + odd_linha_05) / 2
    return round(odd_linha_025, 2)

probabilidade_casa = float(input("Digite a probabilidade de vitória do time da casa (em decimal): "))
probabilidade_visitante = float(input("Digite a probabilidade de vitória do time visitante (em decimal): "))
probabilidade_empate = float(input("Digite a probabilidade de empate (em decimal): "))

odd_handicap = calcular_odd_handicap(probabilidade_casa, probabilidade_visitante, probabilidade_empate)

print("Odd para apostar no handicap asiático -0.25:", odd_handicap)
